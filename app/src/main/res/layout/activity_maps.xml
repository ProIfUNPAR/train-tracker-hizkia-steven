<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/relativeLayout2">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false">

            <TextView
                android:id="@+id/txtStationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:text="KotaAwal - KotaTujuan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutDistance"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="256dp"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:text="Distance"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/valueDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textDistance"
                android:layout_below="@+id/textDistance"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:text="000.00"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/valueDistance"
                android:layout_alignBottom="@+id/valueDistance"
                android:layout_alignLeft="@+id/valueDistance"
                android:layout_toEndOf="@+id/valueDistance"
                android:layout_marginLeft="50dp"
                android:text="KM"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutETA"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="128dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textETA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:text="ETA"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/valueETA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textETA"
                android:layout_below="@+id/textETA"
                android:layout_marginStart="2dp"
                android:layout_marginTop="21dp"
                android:text="00 H 00 M 00 S"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutSpeed"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/relativeLayout">

            <TextView
                android:id="@+id/textSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:text="Speed"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/valueSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textSpeed"
                android:layout_below="@+id/textSpeed"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:text="000"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textKpH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/valueSpeed"
                android:layout_alignLeft="@+id/valueSpeed"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/valueSpeed"
                android:layout_marginLeft="30dp"
                android:text="KpH"
                android:textColor="@android:color/black" />
        </RelativeLayout>

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        tools:context=".MapsActivity" />

</RelativeLayout>